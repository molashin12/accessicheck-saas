# Database
DATABASE_URL="postgresql://username:password@localhost:5432/accessicheck"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenAI API (for AI-powered accessibility insights)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_STARTER_PRICE_ID="price_starter_plan_id"
STRIPE_PROFESSIONAL_PRICE_ID="price_professional_plan_id"
STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_plan_id"

# App Configuration
APP_URL="http://localhost:3000"
APP_NAME="AccessiCheck"

# Email (for notifications - optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Scanning Configuration
MAX_PAGES_PER_SCAN="50"
SCAN_TIMEOUT="30000"
MAX_CONCURRENT_SCANS="5"

# Feature Flags
ENABLE_AI_INSIGHTS="true"
ENABLE_MONITORING="true"
ENABLE_API_ACCESS="false"